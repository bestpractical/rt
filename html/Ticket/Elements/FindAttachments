<%INIT>
my %documents;

#A default implementation here loops through all transactions and pulls out all their attachments.
# We end up doing an end-run around that to get a bit more performance

# We force the cache of ticket transactions to get populated up front. otherwise, the 
# code that looks at attachments will look at each one in turn.
my $attachments = RT::Model::AttachmentCollection->new();

$attachments->columns( qw( id Filename content_type headers subject Parent content_encoding content_type transaction_id Created));

my $transactions = $attachments->new_alias('Transactions');
$attachments->join( alias1 => 'main',
		    column1 => 'transaction_id',
		    alias2 => $transactions,
		    column2 => 'id' );
    
my $tickets = $attachments->new_alias('Tickets');

  $attachments->join( alias1 => $transactions,                         
                        column1 => 'object_id',
                        alias2 => $tickets,
                        column2 => 'id' );
    
    $attachments->limit( alias => $transactions,
                         column => 'object_type',
                        value => 'RT::Model::Ticket');
if ($Tickets) {
    while ($Ticket = $Tickets->next) {
	$attachments->limit( alias => $tickets,
			     column => 'effective_id',
			     value => $Ticket->id() );
    }
} else {
    $attachments->limit( alias => $tickets,
			 column => 'effective_id',
			 value => $Ticket->id() );
}


return ($attachments);
</%INIT>
<%ARGS>
$Ticket => undef
$Tickets => undef
</%ARGS>

