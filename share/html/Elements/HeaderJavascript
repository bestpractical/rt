<%INIT>

my @js_files;
if ( RT->Config->Get('DevelMode') ) {
    @js_files = map { $_ =~ m{^/} ? $_ : "/static/js/$_" } RT::Interface::Web->JSFiles();
}
else {
    my $key = RT::Interface::Web::SquishedJS()->Key;
    @js_files = "/NoAuth/js/squished-$key.js";
}

