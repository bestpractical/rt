<div class="approval">
  <div class="name">
    <a href="<%RT->Config->Get('WebPath')%>/Approvals/Display.html?id=<%$ticket->Id%>"><% loc("#[_1]: [_2]", $ticket->Id, $ticket->Subject) %></a> (<%loc($ticket->Status)%>)
  </div>
% if ($ShowApproving) {
%     foreach my $approving ( $ticket->AllDependedOnBy( Type => 'ticket' ) ) {
  <div class="originating-ticket">
    <span class="link"><a href="<%RT->Config->Get('WebPath')%>/Ticket/Display.html?id=<% $approving->Id %>"><&|/l, $approving->Id, $approving->Subject &>Originating ticket: #[_1]</&></a></span>
    <div class="info">
% if ($ShowCustomFields) {
      <& /Ticket/Elements/ShowCustomFields, Ticket => $approving &>
% }
% if ($ShowHistory) {
      <& /Elements/ShowHistory, Object => $approving, ShowTitle => 0, ShowHeaders => 0, ShowDisplayModes => 0, ShowActions => 0, PathPrefix => RT->Config->Get('WebPath')."/Ticket/" &>
% }
    </div>
  </div>
%     }
% }
  <div class="form">
    <div class="action">
      <div>
% if ( $inactive && $status eq 'resolved' ) {
        <div class="custom-control custom-radio">
          <input type="radio" class="radio custom-control-input" id="Approval-<%$ticket->Id%>-Action-approve" name="Approval-<%$ticket->Id%>-Action" value="approve" checked="checked" />
          <label class="custom-control-label" for="Approval-<%$ticket->Id%>-Action-approve"><% loc('[_1] (Unchanged)', loc('Approve')) %></label>
        </div>
% } else {
        <div class="custom-control custom-radio">
          <input type="radio" class="radio custom-control-input" id="Approval-<%$ticket->Id%>-Action-approve" name="Approval-<%$ticket->Id%>-Action" value="approve" />
          <label class="custom-control-label" for="Approval-<%$ticket->Id%>-Action-approve"><&|/l&>Approve</&></label>
        </div>
% }
      </div>
      <div>
% if ( $inactive && $status ne 'resolved' ) {
        <div class="custom-control custom-radio">
          <input type="radio" class="radio custom-control-input" id="Approval-<%$ticket->Id%>-Action-deny" name="Approval-<%$ticket->Id%>-Action" value="deny" checked="checked" />
          <label class="custom-control-label" for="Approval-<%$ticket->Id%>-Action-deny"><% loc('[_1] (Unchanged)', loc('Deny')) %></label>
        </div>
% } else {
        <div class="custom-control custom-radio">
          <input type="radio" class="radio custom-control-input" id="Approval-<%$ticket->Id%>-Action-deny" name="Approval-<%$ticket->Id%>-Action" value="deny" />
          <label class="custom-control-label" for="Approval-<%$ticket->Id%>-Action-deny"><&|/l&>Deny</&></label>
        </div>
% }
      </div>
% unless ( $inactive ) {
      <div class="custom-control custom-radio">
        <input type="radio" class="radio custom-control-input" id="Approval-<%$ticket->Id%>-Action-none" name="Approval-<%$ticket->Id%>-Action" value="none" checked="checked" />
        <label class="custom-control-label" for="Approval-<%$ticket->Id%>-Action-none"><&|/l&>No action</&></label>
      </div>
% }
    </div>
    <div class="notes">
      <label for="Approval-<%$ticket->Id%>-Notes"><&|/l&>Notes</&></label>
      <textarea class="form-control" name="Approval-<%$ticket->Id%>-Notes" id="Approval-<%$ticket->Id%>-Notes" rows="2" cols="70"></textarea>
    </div>
    <div class="clear"></div>
  </div>
</div>
<%ARGS>
$ShowApproving => 1
$ShowCustomFields => 1
$ShowHistory => 1
$ticket => undef
</%ARGS>
<%INIT>
my $status = $ticket->Status;
my $inactive = $ticket->LifecycleObj->IsInactive( $status );
</%INIT>
