% while (my $cf = $cfs->Next) {
%   my $values = $Article->CustomFieldValues($cf->Id);
%   if ($values->Count == 1) {
%     my $value = $values->First; 
%     if ($Article->IncludeCFTitle($cf)) {
<%      $cf->Name%>:<% $newline |n %>\
