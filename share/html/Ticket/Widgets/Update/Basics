% if ( $Ticket->CurrentUserHasRight('SeeQueue') ) {
  <&| /Elements/LabeledValue, Label => loc('Queue'), ValueSpanClass => 'current-value' &>
    <% $Ticket->QueueObj->Name %>
  </&>
