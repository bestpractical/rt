<div class="row">
  <div class="col-lg">

    <& /Elements/LabeledValue, Class => "time estimated", Label => loc( $Ticket->FieldLabel('TimeEstimated', $Widget) ), ValueSpanClass => "current-value", RawValue => $m->scomp("ShowTime", minutes => $Ticket->TimeEstimated) &>

% $m->callback( %ARGS, CallbackName => 'AfterTimeEstimated', TicketObj => $Ticket );

    <& /Elements/LabeledValue, Class => "time worked sum", Label => loc( $Ticket->FieldLabel('TimeWorked', $Widget) ), ValueSpanClass => "current-value", RawValue => $m->scomp("ShowTime", minutes => $Ticket->TimeWorked ) &>

% $m->callback( %ARGS, CallbackName => 'AfterTimeWorked', TicketObj => $Ticket );

    <& /Elements/LabeledValue, Class => "time left", Label => loc( $Ticket->FieldLabel('TimeLeft', $Widget) ), ValueSpanClass => "current-value", Value => $m->scomp( "ShowTime", minutes => $Ticket->TimeLeft) &>

    <div class="show-custom-fields-container" hx-trigger="none" hx-get="<% RT->Config->Get('WebPath') %>/Views/Component/ShowCustomFields?ObjectType=RT::Ticket&ObjectId=<% $Ticket->Id %>&Grouping=Times">
      <& /Ticket/Elements/ShowCustomFields, Ticket => $Ticket, Grouping => 'Times', Table => 0 &>
    </div>

% $m->callback( %ARGS, CallbackName => 'AfterTimeLeft', TicketObj => $Ticket );

  </div>
  <div class="col-lg">

% my $totalTimeWorked = 0;
% if (RT->Config->Get('DisplayTotalTimeWorked') && ($totalTimeWorked = $Ticket->TotalTimeWorked)) {
    <& /Elements/LabeledValue, Class => "total time worked sum", Label => loc( $Ticket->FieldLabel('Total Time Worked') ), ValueSpanClass => "current-value", RawValue => $m->scomp("ShowTime", minutes => $totalTimeWorked ) &>
% }
% if ( keys %$time_worked ) {
    <&| /Elements/LabeledValue, Class => "time worked by-user", Label => loc( $Ticket->FieldLabel('Time Worked By User') ), ValueSpanClass => "current-value" &>
%   for my $user ( keys %$time_worked ) {
        <div>
          <span class="value"><% $user %>:</span>
          <span class="value"><& /Ticket/Elements/ShowTime, minutes => $time_worked->{$user} &></span>
        </div>
%   }
    </&>
% }

  </div>

% $m->callback( %ARGS, CallbackName => 'EndOfList', TicketObj => $Ticket );
</div>

<%init>
my $time_worked;

if ( $Ticket->CurrentUserCanSeeTime ) {
    if (RT->Config->Get('DisplayTotalTimeWorked')) {
        $time_worked = $Ticket->TotalTimeWorkedPerUser;
    }
    else {
        $time_worked = $Ticket->TimeWorkedPerUser;
    }
}

</%init>
<%args>
$Ticket => undef
$UngroupedCFs => 0
$Widget => undef
</%args>

<%attr>
directly_accessible => 1
</%attr>
