<%init>
my $selected = $ARGS{SelectDisplayColumns};
$selected = [ $selected ] unless ref $selected;
my %selected;
$selected{$_}++ for grep {defined} @{ $selected };
</%init>
<%ARGS>
$CurrentFormat => undef
$AvailableColumns => undef
</%ARGS>
