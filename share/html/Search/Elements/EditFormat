<%init>
my $selected = $ARGS{AddCol} ? [] : $ARGS{SelectDisplayColumns};
$selected = [ $selected ] unless ref $selected;
my %selected;
$selected{$_}++ for grep {defined} @{ $selected };
</%init>
<%ARGS>
$CurrentFormat => undef
$AvailableColumns => undef
$Class => 'RT::Tickets'
$IncludeTicketLinks => $Class eq 'RT::Tickets' ? 1 : 0
</%ARGS>
