        Op => {
            Type => 'component',
            Path => '/Elements/SelectDateRelation',
        },
        Value => {
            Type => 'component',
            Path => '/Elements/SelectDate',
            Arguments => { ShowTime => 0, Default => '' },
        },
    },
    {
        Name => 'TicketTime',
        Field => {
            Type    => 'select',
            Options => [
                TicketTimeWorked => loc('Time Worked'),
                TicketTimeEstimated => loc('Time Estimated'),
